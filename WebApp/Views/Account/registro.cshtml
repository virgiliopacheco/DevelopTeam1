
@model WebApp.Models.Data.Usuario

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="../plantilla/assets/images/favicon.png">
    <title>Registro</title>

    <!-- page css
    <link href="~/plantilla/university/dist/css/pages/login-register-lock.css" rel="stylesheet">-->
    <!-- Custom CSS -->
    <link href="~/plantilla/university/dist/css/style.min.css" rel="stylesheet">

</head>

<body class="skin-default card-no-border">
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <div class="loader">
            <div class="loader__figure"></div>
            <p class="loader__label">CULMINARE</p>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->

    <section id="wrapper" >
        
        <div class="login-register" style="background-image:url(../plantilla/assets/images/background/login-register.jpg);">
            <div class="login-box col-md-8 card" style="margin: auto;">
                <div class="card-body">
                    <center>
                        <img src="../plantilla/assets/images/escudo.jpeg" width="200" />
                        <br />
                        <h2>
                            UASD<br />
                            Sistema De Gestión de Tesis y Monográfico
                        </h2>
                    </center>
                    <hr />
                    <form class="form-horizontal form-material" method="post" id="loginform" action="registro">
                        <h3 class="text-center m-b-20">SOLICITUD DE REGISTRO</h3>
                        <div class="row">
                            <div class="form-group col-md-4">
                                <div class="col-xs-12">
                                    <input class="form-control" type="email" required="" name="email" placeholder="Email">
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <div class="col-xs-12">
                                     <input class="form-control" type="password" name="password" required="" placeholder="Contraseña">
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <div class="col-xs-12">
                                    <input class="form-control" type="password" required="" name="confir_password" placeholder="Confirmar Contraseña">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-4">
                                <div class="col-xs-12">
                                    <select id="rol" required="" name="rol" class="form-control" aria-required="true" placeholder="Rol">
                                        <option value="" selected="">Seleccione</option>
                                        <option value="2">Estudiante</option>
                                        <option value="7">Director</option>
                                        <option value="9">Coordinador De Monográfico</option>
                                        <option value="10">Instructor/Profesor de Modulos</option>
                                        <option value="11">Asesor de Tesis </option>
                                        <option value="12">Asesor de Monográficos</option>
                                        <option value="13">Jurado de Tesis</option>
                                        <option value="14">Jurado  de Monográficos</option>
                                        <option value="16">Empleado-COlaborador-FC</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="form-group text-center p-b-20">
                            <h3 class="custom-control-label" for="customCheck1">INFORMACI&Oacute; PERSONAL</h3>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="form-group col-md-4">
                                <div class="col-md-12">
                                    <input class="form-control" type="text" required="" name="primer_nombre" placeholder="Primer Nombre *">
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <div class="col-md-12">
                                    <input class="form-control" type="text" name="segundo_nombre" placeholder="Segundo Nombre">
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <div class="col-md-12">
                                    <input class="form-control" type="text" name="primer_apellido" required="" placeholder="Primer Apellido">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-4">
                                <div class="col-md-12">
                                    <input class="form-control" type="text" name="segundo_apellido" placeholder="Segundo Apellido">
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <div class="col-md-12">
                                    <select class="custom-select" required="" name="tipo_identificacion" asp-for="tipo_identificacion">
                                        <option value="">Seleccione Tipo Identificación</option>
                                        <option value="C">C&eacute;dula</option>
                                        <option value="P">Pasaporte</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <div class="col-md-12">
                                    <input class="form-control" type="text" required="" asp-for="identificacion" name="identificacion" placeholder="Número Identificación">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-4" 
                                <div class="col-md-12">
                                    <select class="custom-select" name="sexo" asp-for="sexo">
                                        <option value="">Seleccione Sexo</option>
                                        <option value="M">Masculino</option>
                                        <option value="F">Femenino</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <div class="col-md-12">
                                    <input class="form-control" type="text" name="matricula" required="" placeholder="Matricula o Código">
                                </div>
                            </div>
                            <div class="form-group col-md-4">
                                <div class="col-md-12">
                                    <select class="custom-select" required="" name="campus" >
                                        <option value="">Seleccione Campus</option>
                                        <option value="1">SEDE</option>
                                        <option value="2">Ssntiago</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-right">
                            <div class="col-6">
                                <button class="btn btn-info btn-lg btn-block btn-rounded text-uppercase waves-effect waves-light" type="submit">Registrar</button>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <div class="col-6">
                                <a href="login" class="btn btn-danger btn-lg btn-block text-uppercase btn-rounded"><b>Ya estoy Registrado</b></a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <script src="~/plantilla/assets/node_modules/jquery/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/plantilla/assets/node_modules/popper/popper.min.js"></script>
    <script src="~/plantilla/assets/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $(".preloader").fadeOut();
        });
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        });
        // ==============================================================
        // Login and Recover Password
        // ==============================================================
        $('#to-recover').on("click", function () {
            $("#loginform").slideUp();
            $("#recoverform").fadeIn();
        });
    </script>
</body>

</html>



