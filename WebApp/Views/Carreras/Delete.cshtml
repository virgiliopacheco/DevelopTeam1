@model WebApp.Models.Data.Carrera
@using WebApp.Models.Data
@{
    ViewData["Title"] = "Activar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Inactivar</h1>

<h3>¿Esta seguro que desea eliminar esto?</h3>
<div>
    <h4>Campus</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.idEscuela)
        </dt>
        <dd class="col-sm-10">
            @((EnumEscuelas)Model.idEscuela)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Detalles)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Detalles)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>

    <form asp-action="Eliminar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
